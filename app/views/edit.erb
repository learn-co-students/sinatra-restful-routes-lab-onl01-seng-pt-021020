<h1>Edit <%= @recipe_edit.name %></h1>
<h3><%= @recipe_edit.ingredients %></h3>
<h3><%= @recipe_edit.cook_time %></h3>
<form method="post" action="/recipes/<%= @recipe_edit.id %>">
    <input id='hidden' type='hidden' name='_method' value='patch'>
    <p>Recipe Name: <input type='text' name='name'></p>
    <p>Recipe Ingredients: <input type='text' name='ingredients'></p>
    <p>Cook Time: <input type='text' name='cook_time'></p>
    <input type='submit' value='submit'>
</form>
