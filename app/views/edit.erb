<form action="/recipes/<%= @recipe.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">

  <label for="name">Name: </label>
  <input type="text" name="name" id="name" value="<%= @recipe.name %>">

  <label for="ingredients">Ingredients: </label>
  <textarea name="ingredients" id="ingredients"><%= @recipe.ingredients %></textarea>

  <label for="cook_time">Cook Time: </label>
  <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>">

  <button type="submit" id="submit">Submit</button>

</form>
